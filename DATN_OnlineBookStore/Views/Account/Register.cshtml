@model TblTaikhoan

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

        h1 {
            margin-top: 0;
            font-size: 24px;
            color: #333;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-group input[type="text"],
            .form-group input[type="password"],
            .form-group input[type="date"],
            .form-group input[type="radio"] {
                width: 100%;
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 4px;
                box-sizing: border-box;
            }

            .form-group input[type="radio"] {
                width: auto;
                margin-right: 5px;
            }

            .form-group .gender-group {
                display: flex;
                align-items: center;
            }

                .form-group .gender-group label {
                    margin-right: 15px;
                }

        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                background-color: #0056b3;
            }

        .error {
            color: #ff0000;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Register</h1>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
        <div class="form-group">
            @Html.Label("email", "Email")
            @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Email", required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("password", "Password")
            @Html.TextBox("password", null, new { @class = "form-control", type = "password", placeholder = "Password", required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("firstName", "First Name")
            @Html.TextBox("firstName", null, new { @class = "form-control", placeholder = "First Name", required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("lastName", "Last Name")
            @Html.TextBox("lastName", null, new { @class = "form-control", placeholder = "Last Name", required = "required" })
        </div>
        <div class="form-group">
            @Html.Label("phone", "Phone")
            @Html.TextBox("phone", null, new { @class = "form-control", placeholder = "Phone" })
        </div>
        <div class="form-group">
            @Html.Label("birthDate", "Birth Date")
            @Html.TextBox("birthDate", null, new { @class = "form-control", type = "date" })
        </div>
        <div class="form-group">
            <label>Gender:</label>
            <div class="gender-group">
                <label>
                    @Html.RadioButton("gender", "1") Nam
                </label>
                <label>
                    @Html.RadioButton("gender", "0") Nữ
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        }
    </div>
</body>
</html>
