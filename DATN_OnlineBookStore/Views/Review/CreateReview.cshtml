<!DOCTYPE html>
<html>
<head>
    <title>Đánh giá sản phẩm</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .review-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        h2 {
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group textarea {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
            }

        .button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            display: block;
            text-align: center;
            margin-top: 20px;
        }

            .button:hover {
                background-color: #0056b3;
            }

        .stars {
            padding-top:25px;
            display: flex;
            gap: 10px;
        }

        .star {
            width: 30px;
            height: 30px;
            cursor: pointer;
            fill: #ddd;
            transition: fill 0.2s;
        }

            .star.filled {
                fill: #FFD700;
            }
    </style>
</head>
<body>
    <div class="review-container">
        <h2>Đánh giá sản phẩm</h2>
        <form method="post" action="@Url.Action("submitProductReview", "Review")">
            <input type="hidden" name="orderItemId" value="@ViewBag.OrderItemId" />
            <div class="form-group">
                <label for="productName">Sản phẩm</label>
                <input type="text" id="productName" name="productName" value="@ViewBag.ProductName" readonly />
            </div>
            <div class="form-group">
                <label for="rating">Xếp hạng (1-5)</label>
                <div class="stars">
                    <svg class="star" viewBox="0 0 24 24">
                        <polygon points="12,17.27 18.18,21 15.64,13.47 21.5,8.54 13.81,8.18 12,1 10.19,8.18 2.5,8.54 8.36,13.47 5.82,21" />
                    </svg>
                    <svg class="star" viewBox="0 0 24 24">
                        <polygon points="12,17.27 18.18,21 15.64,13.47 21.5,8.54 13.81,8.18 12,1 10.19,8.18 2.5,8.54 8.36,13.47 5.82,21" />
                    </svg>
                    <svg class="star" viewBox="0 0 24 24">
                        <polygon points="12,17.27 18.18,21 15.64,13.47 21.5,8.54 13.81,8.18 12,1 10.19,8.18 2.5,8.54 8.36,13.47 5.82,21" />
                    </svg>
                    <svg class="star" viewBox="0 0 24 24">
                        <polygon points="12,17.27 18.18,21 15.64,13.47 21.5,8.54 13.81,8.18 12,1 10.19,8.18 2.5,8.54 8.36,13.47 5.82,21" />
                    </svg>
                    <svg class="star" viewBox="0 0 24 24">
                        <polygon points="12,17.27 18.18,21 15.64,13.47 21.5,8.54 13.81,8.18 12,1 10.19,8.18 2.5,8.54 8.36,13.47 5.82,21" />
                    </svg>
                </div>
                <input type="hidden" id="rating" name="rating" value="0">
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea id="description" name="description" rows="4"></textarea>
            </div>
            <button type="submit" class="button">Gửi đánh giá</button>
        </form>
    </div>

    <script>
        const stars = document.querySelectorAll('.star');
        const ratingInput = document.getElementById('rating');

        stars.forEach((star, index) => {
            star.addEventListener('click', () => {
                stars.forEach((s, i) => {
                    if (i <= index) {
                        s.classList.add('filled');
                    } else {
                        s.classList.remove('filled');
                    }
                });
                ratingInput.value = index + 1;
            });
        });
    </script>
</body>
</html>
