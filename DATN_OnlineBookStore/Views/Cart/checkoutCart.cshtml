@model CheckoutViewModel
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .checkout-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        h2 {
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 8px;
                box-sizing: border-box;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        #totalPrice {
            font-weight: bold;
        }

        .button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 20px;
            display: block;
            text-align: center;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <div class="checkout-container">
        <h2>Trang Thanh Toán</h2>
        <form id="checkoutForm" method="post" action="@Url.Action("placeOrder", "Cart")">
            <h3>Địa chỉ giao hàng</h3>
            <div class="form-group">
                <label for="fullName">Họ người nhận</label>
                <input type="text" id="fullName" name="FirstName" required placeholder="Nhập họ người nhận">
            </div>
            <div class="form-group">
                <label for="fullName">Tên người nhận</label>
                <input type="text" id="fullName" name="LastName" required placeholder="Nhập tên người nhận">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required placeholder="Nhập email">
            </div>
            <div class="form-group">
                <label for="phone">Số điện thoại</label>
                <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" required placeholder="Ví dụ: 0979123xxx (10 ký tự số)">
            </div>
            <div class="form-group">
                <label for="country">Quốc gia</label>
                <select id="country" name="country" required>
                    <option value="Vietnam">Vietnam</option>
                </select>
            </div>
            <div class="form-group">
                <label for="city">Tỉnh/Thành Phố</label>
                <select id="city" name="city" required>
                    <option value="">Chọn Tỉnh/Thành Phố</option>
                    @foreach (var tinh in ViewBag.Tinhs)
                    {
                        <option value="@tinh.PkITinhId">@tinh.STentinh</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="district">Quận/Huyện</label>
                <select id="district" name="district" required>
                    <option value="">Chọn Quận/Huyện</option>
                </select>
            </div>
            <div class="form-group">
                <label for="ward">Phường/Xã</label>
                <select id="ward" name="ward" required>
                    <option value="">Chọn Phường/Xã</option>
                </select>
            </div>
            <div class="form-group">
                <label for="address">Địa chỉ nhận hàng</label>
                <input type="text" id="address" name="address" required placeholder="Nhập địa chỉ nhận hàng">
            </div>

            <h3>Giỏ hàng</h3>
            <table>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Thành tiền</th>
                </tr>
                @foreach (var item in Model.SelectedItems)
                {
                    <tr>
                        <td>@item.STensanpham</td>
                        <td>@item.ISoluong</td>
                        <td>@item.FGiaban.ToString("C")</td>
                        <td>@item.ThanhTien.ToString("C")</td>
                        <input type="hidden" name="productIds" value="@item.FkISanphamId" />
                        <input type="hidden" name="quantities" value="@item.ISoluong" />
                    </tr>
                }
                <tr>
                    <td colspan="3" style="text-align:right">Tổng tiền:</td>
                    <td id="totalPrice">@Model.TotalPrice.ToString("C")</td>
                </tr>
            </table>
            <button type="submit" class="button">Thanh toán</button>
        </form>
    </div>
    <script>
        $(document).ready(function () {
            $('#city').change(function () {
                var cityId = $(this).val();
                if (!cityId) {
                    $('#district').empty().append('<option value="">Chọn Quận/Huyện</option>');
                    $('#ward').empty().append('<option value="">Chọn Phường/Xã</option>');
                    return;
                }
                $.getJSON(`/api/huyens/${cityId}`)
                    .done(function (data) {
                        var districtSelect = $('#district');
                        districtSelect.empty().append('<option value="">Chọn Quận/Huyện</option>');
                        data.forEach(function (huyen) {
                            districtSelect.append(`<option value="${huyen.pkIHuyenId}">${huyen.sTenhuyen}</option>`);
                        });
                    })
                    .fail(function () {
                        alert('Error fetching districts');
                    });
            });

            $('#district').change(function () {
                var districtId = $(this).val();
                if (!districtId) {
                    $('#ward').empty().append('<option value="">Chọn Phường/Xã</option>');
                    return;
                }
                $.getJSON(`/api/wards/${districtId}`)
                    .done(function (data) {
                        var wardSelect = $('#ward');
                        wardSelect.empty().append('<option value="">Chọn Phường/Xã</option>');
                        data.forEach(function (ward) {
                            wardSelect.append(`<option value="${ward.pkIXaId}">${ward.sTenxa}</option>`);
                        });
                    })
                    .fail(function () {
                        alert('Error fetching wards');
                    });
            });
        });
    </script>
</body>
</html>
