@model IEnumerable<DATN_OnlineBookStore.Models.DailyFinanceReportModel>

@{
    ViewData["Title"] = "ViewDailyFinanceReport";
    ViewBag.Title = "Báo cáo doanh thu hàng ngày";
    var totalMonthlyData = ViewBag.TotalMonthlyData as DATN_OnlineBookStore.Models.DailyFinanceReportModel;
}

<h2>@ViewBag.Title</h2>

@if (totalMonthlyData != null)
{
    <h3>Tổng số hóa đơn tháng: @totalMonthlyData.SoHoaDon</h3>
    <h3>Tổng số tiền tháng: @totalMonthlyData.TongTien</h3>
}

<form method="get" action="@Url.Action("ViewDailyFinanceReport")">
    <div class="form-group">
        <label for="days">Chọn số ngày:</label>
        <input type="number" id="days" name="items" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Xem báo cáo</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Ngày</th>
            <th>Số hóa đơn</th>
            <th>Tổng tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ngay.ToString("dd/MM/yyyy")</td>
                <td>@item.SoHoaDon</td>
                <td>@item.TongTien</td>
            </tr>
        }
    </tbody>
</table>


