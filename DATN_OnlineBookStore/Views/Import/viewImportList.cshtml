@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Nhập Hàng";
}

<h2>Nhập Hàng</h2>

<div style="margin-bottom: 20px;">
    <button class="btn btn-primary" onclick="window.location='@Url.Action("ImportImportFile", "Import")'">Import</button>
    <input type="file" id="file-input" style="display:none;" />
</div>

<table class="table">
    <thead>
        <tr>
            <th>Mã phiếu nhập hàng</th>
            <th>Thời gian</th>
            <th>Nhà cung cấp</th>
            <th>Tổng tiền đến trả</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.PhieuNhapHangId</td>
                <td>@order.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@order.TenNhaCungCap</td>
                <td>@order.TongTien.ToString("N0")</td>
                <td><a href="@Url.Action("viewImportReports", "Import", new { id = order.PhieuNhapHangId })" class="btn btn-warning btn-sm">Chi tiết</a></td>
            </tr>
        }
    </tbody>
</table>
