@model IEnumerable<DATN_OnlineBookStore.Models.TblSanpham>

@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>List of Products</h1>

<p>
    <a asp-action="addProduct" class="btn btn-primary">Thêm sản phẩm mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Hình Ảnh</th>
            <th>Tồn Kho</th>
            <th>Trọng Lượng</th>
            <th>Giá Bán</th>
            <th>Giá Vốn</th>
            <th>Trạng Thái</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.STensanpham</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.SHinhanh))
                    {
                        <img src="@item.SHinhanh" alt="@item.STensanpham" style="width:100px;height:auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@item.ITonkho</td>
                <td>@item.FTrongluong?.ToString("N2")</td>
                <td>@item.FGiaban.ToString("N0") VND</td>
                <td>@item.FGiavon.ToString("N0") VND</td>
                <td>@(item.IsTrangthai == true ? "Active" : "Inactive")</td>
                <td>@item.FkITheloai</td>
                <td>
                    <a asp-controller="Product" asp-action="updateProduct" asp-route-id="@item.PkISanphamId" class="btn btn-warning btn-sm">Edit</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
